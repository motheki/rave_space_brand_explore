---
import { SITE, SOCIALS } from "@consts";
import { getCollection, type CollectionEntry } from "astro:content";

const Spaces: CollectionEntry<"spaces">[] = (
  await getCollection("spaces")
).slice(0, 3);
---

<footer class="bg-primary container mx-auto rounded-t-[80px] p-10 space-y-8">
  <div
    class="flex flex-col lg:flex-row justify-between items-start lg:items-center gap-6"
  >
    <h2 class="text-5xl lg:text-9xl uppercase">{SITE.TITLE}</h2>
    <p class="text-2xl lg:text-3xl max-w-[760px]">
      FIND UR SCENE JOIN THE STREAM.
    </p>
  </div>
  <div class="flex flex-col sm:flex-row sm:flex-wrap justify-between gap-10">
    <div>
      <h3 class="mb-2 text-xl">Support</h3>
      <ul class="space-y-1 text-secondary">
        <li><a href="/contact">Contact</a></li>
        <li><a href="/legal">Legal</a></li>
      </ul>
    </div>
    <div>
      <h3 class="mb-2 text-xl">Tools</h3>
      <ul class="space-y-1 text-secondary">
        <li><a href="/blog">Blog</a></li>
        <li><a href="/Development">Development</a></li>
        <li><a href="/lfx">LFX</a></li>
        <li><a href="/stage-xr">Stage XR</a></li>
      </ul>
    </div>
    <div>
      <h3 class="mb-2 text-xl">Socials</h3>
      <ul class="space-y-1 text-secondary">
        {
          SOCIALS.map((link) => (
            <li>
              <a href={link.HREF}>{link.NAME}</a>
            </li>
          ))
        }
      </ul>
    </div>
    <div>
      <h3 class="mb-2 text-xl">Spaces</h3>
      <ul class="space-y-1 text-secondary">
        {
          Spaces.map((space) => (
            <li>
                <a href=`/spacess/${space.id}`>{space.data.title}</a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
  <span class="block text-center text-sm opacity-70">
    Â© {SITE.TITLE}
  </span>
</footer>
